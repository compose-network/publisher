{
  "name": "rollup-contracts",
  "version": "0.0.1",
  "description": "SSV Rollup Contracts",
  "author": "SSV.Network",
  "contributors": [
    "Riccardo Persiani <r.persiani92@gmail.com>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ssvlabs/rollup-shared-publisher.git"
  },
  "keywords": [
    "CIRC",
    "Espresso",
    "Rollup",
    "Mailbox",
    "SSV"
  ],
  "license": "UNLICENSED",
  "scripts": {
    "compile": "forge compile",
    "build": "npm run lint:fix && forge clean && forge build",
    "deploy:op-sepolia": "source .env && forge script script/DeployOpSepolia.s.sol --rpc-url $OP_SEPOLIA_RPC_URL --private-key $DEPLOYER_PRIVATE_KEY --verify -vvv --broadcast",
    "deploy:rollup-sepolia": "source .env && forge script script/DeployRollup.s.sol --rpc-url $ROLLUP_SEPOLIA_RPC_URL --private-key $DEPLOYER_PRIVATE_KEY --verify -vvv --broadcast",
    "deploy:rollup-hoodi": "source .env && forge script script/DeployRollupHoodi.s.sol --rpc-url $ROLLUP_HOODI_RPC_URL --private-key $DEPLOYER_PRIVATE_KEY --verify -vvv --broadcast",
    "gas-report": "forge test --gas-report",
    "lint:solhint": "solhint './src/**/*.sol'",
    "lint:check": "prettier --check **.sol",
    "lint:fix": "prettier --write **.sol",
    "prepare": "husky",
    "test": "forge test",
    "test-coverage": "forge coverage --no-match-coverage \"(script|test)\"",
    "test-coverage-report": "forge coverage --no-match-coverage \"(script|test)\" --report debug > test.txt"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "prettier-plugin-solidity": "^2.1.0",
    "solhint": "^6.0.0"
  },
  "lint-staged": {
    "src/**/*.sol": "solhint"
  }
}